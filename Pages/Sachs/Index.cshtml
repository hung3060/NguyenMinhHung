    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort">
                    @Html.DisplayNameFor(model => model.Sach[0].SachID)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sach[0].TenSach)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sach[0].TenTG)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sach[0].NXB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sach[0].NgayNhap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sach[0].Gia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sach[0].MoTa)
