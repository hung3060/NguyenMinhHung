    <tbody>
@foreach (var item in Model.Sach) {
        <tr>
             <td>
                @Html.DisplayFor(modelItem => item.SachID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenSach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenTG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NXB)
